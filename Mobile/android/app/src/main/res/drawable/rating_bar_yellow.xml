<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rating_bar_yellow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background star (empty) -->
    <item android:id="@android:id/background"
        android:drawable="@drawable/ic_star_border" /> <!-- use your star border drawable -->

    <!-- Full star (filled) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FFEB3B"/> <!-- Yellow for secondary progress -->
            </shape>
        </clip>
    </item>

    <!-- Progress star (filled) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FFEB3B"/> <!-- Yellow for progress -->
            </shape>
        </clip>
    </item>
</layer-list>
